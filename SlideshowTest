<body>
  <div class="slideshow" id="slideshow">

    <!-- 1) Team Photos -->
    <div class="slide" id="photo-slide">
      <img id="team-photo" src="" alt="Team photo">
    </div>

    <!-- 2) Socials -->
    <div class="slide" id="social-slide">
      <div class="socials">
        <div class="social-item">
          <img src="Facebook.png" alt="Facebook logo">
          <p>@foxinaboxadelaide</p>
        </div>
        <div class="social-item">
          <img src="Instagram.png" alt="Instagram logo">
          <p>@foxinaboxadelaide</p>
        </div>
        <div class="social-item">
          <img src="TikTok.png" alt="TikTok logo">
          <p>@foxinaboxadelaide</p>
        </div>
      </div>
    </div>

  </div>

  <script>
    const slideshow  = document.getElementById('slideshow');
    const slides     = Array.from(document.querySelectorAll('.slide'));
    const photos     = [
      'TV Test/photo1.jpg',
      'TV Test/photo2.jpg',
      'TV Test/photo3.jpg'
      // …add all your team photo filenames here…
    ];
    const bgImages   = [
      'Images/bg1.jpg',
      'Images/bg2.jpg',
      'Images/bg3.jpg'
      // …add all your background filenames here…
    ];
    const cycleMs    = 10_000;  // 10s per slide
    let lastIndex    = -1;

    function randomChoice(arr) {
      return arr[Math.floor(Math.random() * arr.length)];
    }

    function nextSlide() {
      let idx;
      do {
        // photo ~80%, socials ~20%
        idx = (Math.random() < 0.2) ? 1 : 0;
      } while (idx === lastIndex);
      lastIndex = idx;

      // if photo slide, pick a random team photo
      if (idx === 0) {
        document.getElementById('team-photo').src = randomChoice(photos);
      }

      // rotate background
      slideshow.style.backgroundImage = `url(${randomChoice(bgImages)})`;

      // show selected slide
      slides.forEach((s, i) => s.classList.toggle('active', i === idx));
    }

    // start cycling
    nextSlide();
    setInterval(nextSlide, cycleMs);
  </script>
